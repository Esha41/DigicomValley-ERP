@model ERP_Project.Models.ViewModel.DepartmentsVM
@{
}
@section DeptTeamsjscss{
    <link rel="stylesheet" type="text/css" href="../assets/css/vendors/datatables.css">

    <link rel="stylesheet" type="text/css" href="../assets/css/vendors/simple-line-icon.css">

    <link rel="stylesheet" type="text/css" href="../assets/css/vendors/select2.css">
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>Designations</h3>
            </div>
        @*    <div class="col-3 ">
            </div>
            <div class="col-3 ">

                <a class="btn btn-pill btn-primary btn-lg" type="button"  asp-controller="Designation" asp-action="Create">Add Designation</a>

            </div>*@
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <!-- Zero Configuration  Starts-->
        <div class="col-sm-12">
            <div class="card">
                @* <div class="card-header">
                    <h5>Zero Configuration</h5>   </div>*@
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="display" id="basic-1">
                            <thead class="text-center">
                                <tr>
                                    <th>#</th>
                                    <th>Designation</th>
                                    <th>Department</th>
                                    <th>Company</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            @{var count = 0; }
                            <tbody>
                                @{ foreach (var item in Model.Department_Designations_List)
                                    {

                                                                <tr>
                                                                    <td>@{ count = count + 1; } @count</td>
                                                                    <td>@item.DesignationName</td>
                                                                    <td>@item.Department.DepartmentName</td>
                                                                    <td>@item.Company.CompanyName</td>
                                                                    @if (item.Status == true)
                                                                    {
                                                                        <td class="text-success py-1">Active</td>
                                                                    }
                                                                    else
                                                                    {
                                                                        <td class="text-danger py-1">Deactive</td>
                                                                    }
                                                                    <td class="text-center">

                                                                        <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-warning" asp-controller="Designation" asp-action="Edit" asp-route-id="@item.Department_DesignationsId"><i class="icon-pencil"></i></a>

                                                                        <button class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal" disabled><i class="icon-trash"> </i></button>
                                                                        @if (item.Status == true)
                                                                        {
                                                                            <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-success" asp-action="ChangeStatus" asp-route-id="@item.Department_DesignationsId"><i class="icon-link" title="Click For Offline"></i></a>
                                                                        }
                                                                        else
                                                                        { <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-danger" asp-action="ChangeStatus" asp-route-id="@item.Department_DesignationsId"><i class="icon-link" title="Click For Online"></i></a>

                                                                        }
                                                                    </td>
                                                                </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--delete modal-->

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Designation</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>

            <div class="modal-body">
                <form>

                    <div class="form-group">
                        <p class="text-danger">Alert..Deleting a designation will also delete all of its sub entites!</p>
                        <h5>Are you sure you want to delete this?</h5>
                    </div>

                </form>
            </div>


            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                <a class="btn btn-primary" @*href="~/Designation/Delete/@Model.Department_Designations_List.FirstOrDefault().Department_DesignationsId"*@>Delete</a>
            </div>
        </div>
    </div>
</div>

