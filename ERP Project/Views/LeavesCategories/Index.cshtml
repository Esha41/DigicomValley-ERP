<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="display" id="basic-1">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @if (item.Status == true)
                                            {<div style="color:green">Active</div> }
                                            else
                                            { <div style="color:red">Deactive</div>}
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.LeavesCategoryId"><i class="icon-pencil" style="font-size:23px;color:blue;"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.LeavesCategoryId"><i class="icon-trash" style="font-size:23px;color:red;"></i></a><br />
                                            @if (item.Status == true)
                                            {<a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-success" onclick="ChangeLeavesCategoriesStatus(@item.LeavesCategoryId)"><i class="fa fa-fw" aria-hidden="true" title="Click For Offline"></i></a> }
                                            else
                                            { <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-danger" onclick="ChangeLeavesCategoriesStatus(@item.LeavesCategoryId)"><i class="fa fa-fw" aria-hidden="true" title="Click For online"></i></a>}
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



