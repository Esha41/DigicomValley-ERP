@model IEnumerable<ERP_Project.Models.OfficialShifts>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>Shifts Timming</h3>
            </div>
            <div class="col-4 ">
            </div>
            <div class="col-2 ">
                <div class="row">

                    <div class="btn-group">
                        <a class="btn btn-pill btn-primary btn-lg" type="button" asp-controller="OfficialShifts" asp-action="Create">Add</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="display" id="basic-1">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Shifts.ShiftName)
                                    </th>
                                    @*                                    <th>
            @Html.DisplayNameFor(model => model.MinStartTime)
        </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.StartTime)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaxStartTime)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MinEndTime)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EndTime)
                                    </th>
                                    @*<th>
            @Html.DisplayNameFor(model => model.MaxEndTime)
        </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.BreakTime)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Day)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Company)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Shifts.ShiftName)
                                    </td>
                                    @*                                        <td>
            @Convert.ToString(string.Format("{0:hh:mm tt}", item.MinStartTime))
        </td>*@
                                    <td>
                                        @Convert.ToString(string.Format("{0:hh:mm tt}", item.StartTime))
                                    </td>
                                    <td>
                                        @Convert.ToString(string.Format("{0:hh:mm tt}", item.MaxStartTime))
                                    </td>
                                    <td>
                                        @Convert.ToString(string.Format("{0:hh:mm tt}", item.MinEndTime))
                                    </td>
                                    <td>
                                        @Convert.ToString(string.Format("{0:hh:mm tt}", item.EndTime))
                                    </td>
                                    @*<td>
                @Convert.ToString(string.Format("{0:hh:mm tt}", item.MaxEndTime))
        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BreakTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Day)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company.CompanyName)
                                    </td>
                                    <td>
                                        @if (item.Status == true)
                                        {<div style="color:green">Active</div> }
                                        else
                                        { <div style="color:red">Deactive</div>}
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.OfficialShiftsId"><i class="icon-pencil" style="font-size:23px;color:blue;"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.OfficialShiftsId"><i class="icon-trash" style="font-size:23px;color:red;"></i></a><br />
                                        @if (item.Status == true)
                                        {<a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-success" onclick="ChangeShiftTimmingStatus(@item.OfficialShiftsId)"><i class="fa fa-fw" aria-hidden="true" title="Click For Offline"></i></a> }
                                        else
                                        { <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-danger" onclick="ChangeShiftTimmingStatus(@item.OfficialShiftsId)"><i class="fa fa-fw" aria-hidden="true" title="Click For online"></i></a>}
                                    </td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Shifts.ShiftName)
                                    </th>
                                    @*                                    <th>
            @Html.DisplayNameFor(model => model.MinStartTime)
        </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.StartTime)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaxStartTime)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MinEndTime)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EndTime)
                                    </th>
                                    @*<th>
            @Html.DisplayNameFor(model => model.MaxEndTime)
        </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.BreakTime)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Day)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Company)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/Toggle.js"></script>
}