@model ERP_Project.Models.ViewModel.DepartmentsVM
@{
}

@section DeptTeamsjscss{
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/datatables.css">

    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/simple-line-icon.css">

    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/select2.css">
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>
                    Edit Department
                </h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">                                       <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">Apps</li>

                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" method="post" asp-controller="Department">
                        <input type="hidden" asp-for="departments.DepartmentId" />
                        <div class="form theme-form">

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">

                                        <label asp-for="departments.CompanyId" class="form-label">Company:</label>
                                        <select class="form-control btn-square"  asp-for="departments.CompanyId" asp-items="ViewBag.CompanyId" disabled required>
                                        </select>  

                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="container-fluid">
                                            <div class="select2-drpdwn">
                                                <div class="row">
                                                    <!-- Default Textbox start-->
                                                    <div class="col-md-12">

                                                        <div class="mb-2">

                                                            <div class="col-form-label">Select Department Head:</div>
                                                            <select class="js-example-placeholder-multiple col-sm-12" asp-for="EmployeesIds"  asp-items="ViewBag.EmployeeId" multiple="multiple">
                                                            </select> @*  asp-items="ViewBag.EmployeeId"*@
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="departments.DepartmentName" class="form-label">Department Name:</label>
                                        <input asp-for="departments.DepartmentName" class="form-control" type="text" placeholder="Name must be Unique" required>
                                    </div>
                                </div>

                            </div>

                            <br />

                            <div class="row">
                                <div class="col">
                                    <div class="form-group mb-0">
                                        <input type="submit" value="Edit" class="btn btn-success mr-3" />
                                        <a class="btn btn-danger" href="~/Department/Index">Back</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section DeptTeamsjs{
    <script src="~/assets/js/datatable/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/js/datatable/datatables/datatable.custom.js"></script>

    <script src="~/assets/js/icons/icons-notify.js"></script>
    <script src="~/assets/js/icons/icon-clipart.js"></script>

    <script src="~/assets/js/select2/select2.full.min.js"></script>
    <script src="~/assets/js/select2/select2-custom.js"></script>


    <script type="text/javascript">

        $(".js-example-placeholder-multiple").select2({
            placeholder: "Select Department Head "
        });
        
    </script>

}
